<!-- views/profile.ejs -->
<!doctype html>
<html>
<head>
	<title>Node Authentication</title>
	<link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.0.2/css/bootstrap.min.css">
	<link rel="stylesheet" href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.min.css">
	<style>
		body 		{ padding-top:80px; word-wrap:break-word; }
	</style>
</head>
<body>
<div class="container">

	<div class="page-header text-center">
		<h1><span class="fa fa-anchor"></span> Profile Page</h1>
		<a href="/signup" class="btn btn-default btn-sm">Logout</a>
	</div>

	<div class="row">



				<% console.log(user) %>
				
				<% 
				if(user.facebook.id === undefined && user.twitter.id === undefined && user.linkedin.id === undefined && user.stocktwits.id === undefined){ %>
		<!-- GOOGLE INFORMATION -->
		<div class="col-sm-6">
			<div class="well">
				<h3 class="text-primary"><span class="fa fa-google"></span> Google</h3>

					<p>
						<strong>id</strong>: <%= user.google.id %><br>
						<strong>token</strong>: <%= user.google.token %><br>
						<strong>email</strong>: <%= user.google.email %><br>
						<strong>name</strong>: <%= user.google.name %>
					</p>

			</div>
		</div>		

		<% }  if(user.facebook.id === undefined && user.google.id === undefined && user.linkedin.id === undefined && user.stocktwits.id === undefined){ %>  
			<!-- TWITTER INFORMATION -->
		<div class="col-sm-6">
			<div class="well">
				<h3 class="text-primary"><span class="fa fa-twitter"></span> TWITTER</h3>

					<p>
						<strong>id</strong>: <%= user.twitter.id %><br>
						<strong>token</strong>: <%= user.twitter.token %><br>
						<strong>email</strong>: <%= user.twitter.email %><br>
						<strong>name</strong>: <%= user.twitter.name %>
					</p>

			</div>
		</div>	
		<% } %>
   
		<%    if(user.twitter.id === undefined && user.google.id === undefined && user.linkedin.id === undefined && user.stocktwits.id === undefined){ %>  
			<!-- facebook INFORMATION -->
		<div class="col-sm-6">
			<div class="well">
				<h3 class="text-primary"><span class="fa fa-facebook"></span> facebook</h3>

					<p>
						<strong>id</strong>: <%= user.facebook.id %><br>
						<strong>token</strong>: <%= user.facebook.token %><br>
						<strong>email</strong>: <%= user.facebook.email %><br>
						<strong>name</strong>: <%= user.facebook.name %>
					</p>

			</div>
		</div>	
		<% } %>




	</div>

</div>
</body>
</html>
